<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity"
    >


    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/logo1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/et_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="10dp"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/et_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="PASSWORD"
        android:layout_centerInParent="true"
        android:layout_below="@id/et_id"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/et_passwordChk"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="PASSWORD CHECK"
        android:layout_centerInParent="true"
        android:layout_below="@id/et_password"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="NICK NAME"
        android:layout_centerInParent="true"
        android:layout_below="@id/et_passwordChk"
        />


    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="회원가입시 사용되는 E-mail은 비밀번호 변경시 인증을 위해 사용되므로 유효한 E-mail을 입력하세요."

        android:layout_centerInParent="true"

        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="10sp"
        android:layout_below="@id/et_nickname"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_Acc"

        android:layout_centerInParent="true"
        android:gravity="center"

        android:layout_marginBottom="20dp"
        >


        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"

       />

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"


            />

    </LinearLayout>




    <Button
        android:id="@+id/btn_Acc"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="회원가입"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/btn"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="clickAcc"/>

</RelativeLayout>