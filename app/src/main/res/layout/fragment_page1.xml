<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">




    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구슬"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/tv_bead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text=""/>

        <ImageView
            android:id="@+id/btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/refresh" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/layout"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/btn_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="구슬 내역확인"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:background="@drawable/btn"
            android:textColor="#FFFFFF"

           />

        <Button
            android:id="@+id/btn_atten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="출석체크"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:background="@drawable/btn"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btn_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="구슬 모으는법"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:background="@drawable/btn"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@+id/btn_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제휴업소 확인"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:background="@drawable/btn"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btn_patner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제휴업소 신청"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:background="@drawable/btn"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btn_patnerAlliance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제휴업소 신청내역"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:background="@drawable/btn"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />



    </LinearLayout>

</RelativeLayout>